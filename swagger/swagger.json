{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "API do sistema de gerenciamento de turmas do núcleo de esportes da faculdade.",
        "title": "Nucleo de Esportes API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/cad/local": {
            "get": {
                "description": "Retorna uma lista com todos os locais cadastrados",
                "tags": [
                    "Cadastro"
                ],
                "summary": "Lista todos os locais",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Local"
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao buscar locais",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/cad/mod": {
            "get": {
                "description": "Retorna uma lista com todas as modalidades cadastradas",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Cadastro"
                ],
                "summary": "Lista todas as modalidades",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Modalidade"
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao buscar modalidades ",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/turma": {
            "get": {
                "description": "Retorna uma lista com todas as turmas cadastradas",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Turmas"
                ],
                "summary": "Lista todas as turmas",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/controller.TurmaResponse"
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao buscar turmas",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "post": {
                "description": "Cria uma nova turma com dados como horário, limite de inscritos, dia da semana, local e modalidade.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Turmas"
                ],
                "summary": "Cria uma nova turma",
                "parameters": [
                    {
                        "description": "Dados da nova turma",
                        "name": "turma",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controller.Turma"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Turma criada com sucesso",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Credenciais incorretas | Limite de 30 inscritos ultrapassado | Local não encontrado",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Erro ao buscar nome do local | Erro ao buscar nome da modalidade | Erro interno",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/turma/{id}": {
            "get": {
                "description": "Retorna os dados completos de uma turma com base no ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Turmas"
                ],
                "summary": "Busca turma por ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID da Turma",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controller.TurmaResponse"
                        }
                    },
                    "400": {
                        "description": "Turma não encontrada",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Erro ao buscar a turma | Erro ao tentar localizar local ou modalidade",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "put": {
                "description": "Atualiza os dados de uma turma existente com base no ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Turmas"
                ],
                "summary": "Atualiza uma turma",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID da Turma",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Dados atualizados da turma",
                        "name": "turma",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controller.Turma"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Turma atualizada",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/controller.Turma"
                            }
                        }
                    },
                    "400": {
                        "description": "Credenciais incorretas | Turma não encontrada",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Erro ao tentar atualizar turma",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "delete": {
                "description": "Deleta uma turma pelo ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Turmas"
                ],
                "summary": "Deleta uma turma",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID da Turma",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Turma deletada com sucesso!",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Turma não encontrada",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Erro ao deletar a turma",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "description": "Autentica um usuário existente e retorna token JWT e dados do usuário",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Usuário"
                ],
                "summary": "Realiza login do usuário",
                "parameters": [
                    {
                        "description": "Credenciais de login",
                        "name": "credentials",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controller.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso!",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "email ou senha incorretos",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Falha ao tentar autenticar usuário",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Erro ao tentar buscar informações do usuário",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/user/register": {
            "post": {
                "description": "Cria um novo usuário com email, senha, tipo e nome",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Usuário"
                ],
                "summary": "Registra um novo usuário",
                "parameters": [
                    {
                        "description": "Dados do novo usuário",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controller.RegisterRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Usuario cadastrado com sucesso",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Credenciais incorretas ou tipo de usuário inválido",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Erro ao tentar cadastrar usuario",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "controller.LoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "controller.RegisterRequest": {
            "type": "object",
            "required": [
                "email",
                "nome",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "nome": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "user_type": {
                    "type": "string"
                }
            }
        },
        "controller.Turma": {
            "type": "object",
            "properties": {
                "dia_semana": {
                    "type": "string"
                },
                "horario_fim": {
                    "type": "string"
                },
                "horario_inicio": {
                    "type": "string"
                },
                "limite_inscritos": {
                    "type": "integer"
                },
                "local_id": {
                    "type": "integer"
                },
                "modalidade_id": {
                    "type": "integer"
                },
                "sigla": {
                    "type": "string"
                }
            }
        },
        "controller.TurmaResponse": {
            "type": "object",
            "properties": {
                "dia_semana": {
                    "type": "string"
                },
                "horario_fim": {
                    "type": "string"
                },
                "horario_inicio": {
                    "type": "string"
                },
                "limite_inscritos": {
                    "type": "integer"
                },
                "local": {
                    "type": "string"
                },
                "modalidade": {
                    "type": "string"
                },
                "sigla": {
                    "type": "string"
                },
                "turma_id": {
                    "type": "integer"
                }
            }
        },
        "model.Local": {
            "type": "object",
            "properties": {
                "campus": {
                    "type": "string"
                },
                "local_id": {
                    "type": "integer"
                },
                "nome": {
                    "type": "string"
                }
            }
        },
        "model.Modalidade": {
            "type": "object",
            "properties": {
                "modalidade_id": {
                    "type": "integer"
                },
                "nome": {
                    "type": "string"
                },
                "valor": {
                    "type": "number"
                }
            }
        }
    }
}