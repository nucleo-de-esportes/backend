{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "API do sistema de gerenciamento de turmas do núcleo de esportes da faculdade.",
        "title": "Nucleo de Esportes API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/aulas/{id}/presenca": {
            "put": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "O aluno autenticado pode confirmar ou remover presença em uma aula específica",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Presença"
                ],
                "summary": "Marca ou desmarca a presença de um aluno em uma aula",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID da Aula",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Estado da presença",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.PresencaRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Presença atualizada com sucesso",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Aula inválida",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Usuário não autenticado",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Aula não encontrada",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Erro ao registrar presença",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/cad/local": {
            "get": {
                "description": "Retorna uma lista com todos os locais cadastrados",
                "tags": [
                    "Cadastro"
                ],
                "summary": "Lista todos os locais",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Local"
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao buscar locais",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/cad/mod": {
            "get": {
                "description": "Retorna uma lista com todas as modalidades cadastradas",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Cadastro"
                ],
                "summary": "Lista todas as modalidades",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Modalidade"
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao buscar modalidades ",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/user/inscricao": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Inscreve o usuário autenticado em uma turma específica",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Usuário"
                ],
                "summary": "Realiza a inscrição de um aluno em uma turma",
                "parameters": [
                    {
                        "description": "ID da Turma",
                        "name": "inscricao",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.InscricaoRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Inscrição realizada com sucesso!",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Token ausente ou inválido",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Turma não encontrada",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "description": "Autentica um usuário existente e retorna token JWT e dados do usuário",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Usuário"
                ],
                "summary": "Realiza login do usuário",
                "parameters": [
                    {
                        "description": "Credenciais de login",
                        "name": "credentials",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso!",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "email ou senha incorretos",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Falha ao tentar autenticar usuário",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Erro ao tentar buscar informações do usuário",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handlers.InscricaoRequest": {
            "type": "object",
            "properties": {
                "turma_id": {
                    "type": "integer"
                }
            }
        },
        "handlers.LoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "handlers.PresencaRequest": {
            "type": "object",
            "properties": {
                "presente": {
                    "type": "boolean"
                }
            }
        },
        "model.Local": {
            "type": "object",
            "properties": {
                "campus": {
                    "type": "string"
                },
                "local_id": {
                    "type": "integer"
                },
                "nome": {
                    "type": "string"
                }
            }
        },
        "model.Modalidade": {
            "type": "object",
            "properties": {
                "modalidade_id": {
                    "type": "integer"
                },
                "nome": {
                    "type": "string"
                },
                "valor_aluno": {
                    "type": "number"
                },
                "valor_professor": {
                    "type": "number"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer\" followed by a space and a JWT token.",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}